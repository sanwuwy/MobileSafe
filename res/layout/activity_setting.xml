<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:itheima="http://schemas.android.com/apk/res/com.itheima.mobilesafe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        style="@style/text_title_style"
        android:text="设置中心" />

    <com.itheima.mobilesafe.ui.SettingItemView
        android:id="@+id/siv_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        itheima:desc_off="自动更新已经关闭"
        itheima:desc_on="自动更新已经开启"
        itheima:title="设置是否自动更新" >
    </com.itheima.mobilesafe.ui.SettingItemView>

    <com.itheima.mobilesafe.ui.SettingItemView
        android:id="@+id/siv_show_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        itheima:desc_off="显示号码归属地服务已经关闭"
        itheima:desc_on="显示号码归属地服务已经开启"
        itheima:title="设置是否显示号码归属地" >
    </com.itheima.mobilesafe.ui.SettingItemView>

    <com.itheima.mobilesafe.ui.SettingClickView
        android:id="@+id/scv_changebg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        itheima:desc_on="半透明"
        itheima:title="归属地提示框风格" >
    </com.itheima.mobilesafe.ui.SettingClickView>

    <com.itheima.mobilesafe.ui.SettingItemView
        android:id="@+id/siv_callsms_safe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        itheima:desc_off="黑名单拦截已经关闭"
        itheima:desc_on="黑名单拦截已经开启"
        itheima:title="黑名单拦截设置" >
    </com.itheima.mobilesafe.ui.SettingItemView>

    <com.itheima.mobilesafe.ui.SettingItemView
        android:id="@+id/siv_watchdog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        itheima:desc_off="看门狗已经关闭"
        itheima:desc_on="看门狗已经开启"
        itheima:title="程序锁设置" >
    </com.itheima.mobilesafe.ui.SettingItemView>

</LinearLayout>