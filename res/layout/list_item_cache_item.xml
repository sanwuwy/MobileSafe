<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="60dip"
    android:background="@drawable/main_item_selector" >

     <ImageView
        android:id="@+id/iv_cache_item_icon"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="5dip"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dip"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_cache_item_icon"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_cache_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="程序名称"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_cache_item_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:text="缓存大小"
            android:textColor="#88000000"
            android:textSize="18sp" />
    </LinearLayout>
    
    <ImageView
        android:id="@+id/iv_cache_item_delete"
        android:layout_width="25dip"
        android:layout_height="25dip"
        android:layout_marginRight="15dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/appmgr_system_app_uninstall_pressed" />

</RelativeLayout>